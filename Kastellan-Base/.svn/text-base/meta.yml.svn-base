---
name:
    Base Module used in the digitalSTROM Kastellan Widgets
version: 1.0
release: 0
description:
    Contains several files which are necessary and common in all digitalSTROM Kastellan Widgets
parents:
    - Arteria-Base
applications:
    kastellan:
        main:     flab/applications/kastellan.js
        xslt:     kastellan.xsl
        require-script: 
            - jquery
            - jqueryui
            - gettext
        require-css:
            - container
yui_test_tpl: &yui_test_tpl
    require-script:
        - prototype
        - yui-test
        - gettext
    require-css:
        - unittest
        - common-styles
tests:
        flab_kastellan_PropertyTree_test:
                require-script:
                                - widget_test
                                - jquery
                                - jqueryui
                                - prototype
                                - yui-test
                                - gettext
                require-css:
                    - unittest
css-bundles:
        kastellan:
                - kastellan.css
        container:
                - container.css
libraries:
        jquery:
                version: 1.6.1
                filter:
                        - "+ **.js"
                script-bundles:
                        jquery:
                                - jquery.js
        jqueryui:
                version: 1.8.13
                filter:
                        - "+ **.js"
                script-bundles:
                        jqueryui:
                                - jqueryui.js
        flot:
                version: 1.6.1
                filter:
                        - "+ **.js"
                script-bundles:
                        flot:
                                - flot.js
        widget:
                version: 1.0.0
                filter:
                        - "+ **.js"
                script-bundles:
                        widget:
                                - widget.js
        widget_test:
                version: 1.0.0
                filter:
                        - "+ **.js"
                script-bundles:
                        widget_test:
                                - widget_test.js
        widget_browser:
                version: 1.0.0
                filter:
                        - "+ **.js"
                script-bundles:
                        widget_browser:
                                - widget_browser.js
